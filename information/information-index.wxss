.swiper_top {
  width:100%; 
  height:710rpx;
}
.swiper_top_view{
  background-color:#c33f88;
  height:670rpx;
  margin : 20rpx 8% 10rpx 8%;
  border-radius: 6px;
  box-shadow: 14rpx 14rpx 6rpx #888888;
}
.view_center_x{
  width: 100%;
  white-space: nowrap; 
}
.view_center_x_view{
  background-color:#c33f88;
  height:200rpx;
  width: 150rpx;
  margin : 15rpx 20rpx 15rpx 20rpx;
  border-radius: 6px;
  display: inline-block;
  box-shadow: 14rpx 14rpx 6rpx #888888;
}
.view_center_y{
  width: 100%;
}
.view_center_y_view{
  margin : 15rpx 30rpx 15rpx 30rpx;
  height: 430px;
}
.type_describe{
  margin-left: 5px;
}
.type_title{
  font-size: 38rpx;
}
.type_text{
  font-size: 24rpx;
}
.type_view{
  margin: 10px 5px 200px 5px;
  height: 380px;
  border-radius: 6px;
  overflow: hidden;
  box-shadow: 
  -4px 0px 6px #888888, 
  0px -3px 6px black, 
  4px 0px 6px #888888,  
  0px 5px 6px black;
}
.type_view_img{
  height: 50%;
  background-color: #c33f88;
}
.type_view_text{
  height: 45%;
  background-color: yellowgreen;
}
.type_view_text_title{
  font-size: 34rpx;
  width: 100%;
  overflow:hidden;
  margin-left: 20px;
  padding-top: 20px;
}
.type_view_text_content{
  margin-top: 10px;  
  margin-left: 20px;
  overflow:hidden;
}
.type_view_bottom{
  margin-left: 10px;
  font-size: 20rpx;
  color: #aaa;
}